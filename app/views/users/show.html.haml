.user-mypage-container
  %div.user-mypage-container__inner
    %h1.user-mypage-container__title #{@user.nickname}さんの MYPAGE
    = form_tag("/users/#{@user.id}/comments", method: :post) do
      %textarea.comment-box{:cols => "40", :name => "kanso", :rows => "4"}
        メッセージを入力
      %button{class: "user-mypage-container__submit",:type => "submit"}
        SEND
    %div.comment-container
      %h1.comment-container__title <メッセージ一覧>
      %div.comment-container__comments
        - if @comments
          - @comments.each do |comment|
            %p
            = comment.user.nickname
            ：
            = comment.text
            %br
            = comment.created_at.strftime("%Y/%m/%d %H:%M")
